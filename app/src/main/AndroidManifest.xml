<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Meta Spatial SDK Permissions -->
    <uses-permission android:name="com.oculus.permission.USE_SCENE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Meta Quest Feature Requirements -->
    <uses-feature
        android:name="android.hardware.vr.headtracking"
        android:required="true" />
    <uses-feature
        android:name="oculus.software.handtracking"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MetaPet">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Meta Spatial SDK Metadata -->
        <meta-data
            android:name="com.meta.spatial.sdk.supported_devices"
            android:value="quest2|quest3|questpro" />
    </application>

</manifest>
